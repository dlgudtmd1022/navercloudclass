package poly.inheri;

public class Magician {

	private String id;
	private int hp;
	private int atk;
	private int def;
	private int exp;

	public Magician(String id) {
		this.id = id;
		this.hp = 20;
		this.atk = 2;
		this.def = 0;
		this.exp = 0;		
	}
	
	public void showStatus() {
		System.out.println("아이디 : " + id);
		System.out.println("체력 : " + hp);
		System.out.println("공격력 : " + atk);
		System.out.println("방어력 : " + def);
		System.out.println("경험치 : " + exp);
		System.out.println("-----------------------");
	}	
	
	public void castFireball() {
		
	}
	
	public void hunt(Monster monster) {
		if(monster.getHp() <= 0) {
			System.out.println("이미 죽은 몬스터입니다.");
			return;
		}
		monster.setHp(monster.getHp() - (this.atk - monster.getDef()));
		if(monster.getHp() <= 0) {
			System.out.println(monster.getName() + "(이)가 죽었습니다.");
			this.exp += monster.getExp();
		}else {
			System.out.println(monster.getName() + "(이)가 죽지않고 반격했다.");
			if((this.hp -= (monster.getAtk() - this.def)) < 0) {
				this.hp--;
			}else if(monster.getAtk() == 0) {
				return;
			}else {
				this.hp -= monster.getAtk() - this.def;
			}
		}
	}
	
	
	
	
}

