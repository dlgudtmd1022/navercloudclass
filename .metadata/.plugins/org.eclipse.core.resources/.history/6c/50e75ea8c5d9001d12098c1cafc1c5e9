package poly.inheri;

public class Magician {

	private String id;
	private int hp;
	private int atk;
	private int def;
	private int exp;

	public Magician(String id) {
		this.id = id;
		this.hp = 20;
		this.atk = 2;
		this.def = 0;
		this.exp = 0;		
	}
	
	public void showStatus() {
		System.out.println("아이디 : " + id);
		System.out.println("체력 : " + hp);
		System.out.println("공격력 : " + atk);
		System.out.println("방어력 : " + def);
		System.out.println("경험치 : " + exp);
		System.out.println("-----------------------");
	}	
	
	public void setCastFireball(int atk) {
//		int atk = this.atk*2;
			
	}
	
	public void hunt(Monster monster) {
		if(monster.isInactive()) {
			System.out.println("이미 죽은 몬스터입니다.");
			return;
		}		
		if(monster.isInactiveAfterNextAttacked(this.atk)) {
			System.out.println(monster.getName() + "(이)가 죽었습니다.");
			monster.setAfterAttackedHp(this.atk);
			userGetExp(monster.getExp());
		}else {
			System.out.println(monster.getName() + "(이)가 죽지않고 반격했다.");
			monster.setAfterAttackedHp(this.atk);
			MonsterAttackedAfterHp(monster.getAtk());			
		}
				
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}

	public int getExp() {
		return exp;
	}

	public void setExp(int exp) {
		this.exp = exp;
	}
	
	public void MonsterAttackedAfterHp(int monsterAtk) {
		if((this.hp -= (monsterAtk - this.def)) < 0) {
			this.hp--;
		}else if(monsterAtk == 0) {
			return;
		}else {
			this.hp -= monsterAtk - this.def;
		}
	}	
	public void userGetExp(int monsterExp) {
		this.exp += monsterExp;
	}
}

